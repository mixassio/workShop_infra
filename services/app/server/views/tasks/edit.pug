extends /layouts/application.pug

block content
    h2.text-center Edit task: #{task.name}
    .row.mt-3
      .col-sm-6.mx-auto
        +formFor(f, { url: urlFor('taskPatch', task.id), method: 'PATCH' })
          +input(f, 'name')
          +select(f, 'taskStatusId', { list: statusList })
          +select(f, 'assignedToId', { list: userList })
          +textarea(f, 'description')
          +textarea(f, 'tagsName')
          +button(f)
